modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "task-cat-expo-app"

[[workflows.workflow]]
name = "Expo Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npx expo start --web --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "task-cat-expo-app"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npx expo start --web"

[deployment]
run = ["sh", "-c", "npm install && npx expo start --web --port 5000"]
